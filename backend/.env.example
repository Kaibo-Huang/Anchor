# Anchor Backend Environment Variables
# Copy this to .env and fill in your values

# TwelveLabs API (https://twelvelabs.io)
TWELVELABS_API_KEY=your_twelvelabs_api_key

# Google AI / Veo (https://ai.google.dev)
GOOGLE_API_KEY=your_google_api_key

# Supabase (https://supabase.com)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key

# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET=your-bucket-name

# S3 Upload Optimization
S3_USE_ACCELERATION=true
S3_MULTIPART_THRESHOLD=104857600  # 100MB in bytes
S3_MULTIPART_CHUNK_SIZE=10485760  # 10MB in bytes
S3_MULTIPART_MAX_CONCURRENCY=4

# Redis (for Celery)
REDIS_URL=redis://localhost:6379

# Shopify App (https://partners.shopify.com)
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_API_VERSION=2024-01

# Encryption Key for Shopify tokens
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your_fernet_encryption_key

# URLs (Use ngrok for Shopify OAuth: ngrok http 8000, then update BASE_URL)
BASE_URL=https://your-ngrok-url.ngrok-free.app
FRONTEND_URL=http://localhost:3000

# GCP / Vertex AI (for Veo 2 video inpainting - OPTIONAL)
# Enables the most seamless product placement by inserting products directly into video
# If not configured, falls back to Veo 3.1 scene-matching or image overlays
GCP_PROJECT_ID=your-gcp-project-id
GCS_BUCKET=your-gcs-bucket-name
# Authentication options:
# 1. Run `gcloud auth login` (for local development)
# 2. Set service account key path (for production):
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
